{% macro local_logging() %}
logging:
  driver: local
  options:
    mode: non-blocking
    max-size: 10m
{% endmacro %}

{% macro json_logging() %}
logging:
  driver: json-file
  options:
    mode: non-blocking
    max-size: 10m
    max-file: "3"
{% endmacro %}

{% macro local_syslog_logging() %}
logging:
  driver: syslog
  options:
    mode: non-blocking
    syslog-facility: daemon
    syslog-format: rfc3164
    syslog-address: unixgram:///dev/log
{% raw %}
    tag: "{{.Name}}/{{.ID}}"
{% endraw %}
{% endmacro %}


{% macro journald_logging() %}
logging:
  driver: journald
  options:
    mode: non-blocking
{% raw %}
    tag: "{{.Name}}/{{.ID}}"
{% endraw %}
{% endmacro %}

{% macro autoarch(amd64, aarch64) %}{% if is_dev or not is_rpi %}{{ amd64 }}{% else %}{{ aarch64 }}{% endif %}{% endmacro %}

{% macro private_image(name, tag) %}{#
#}{{ private_docker_registry }}/{{ name }}:{{
    autoarch('latest', 'aarch64')
      if tag is not defined
      else
    tag
  }}{% endmacro %}

{% macro service(name, image) %}
{{ name }}:
  image: {{ image }}
  {{ common()|indent(width = 2) }}
{% endmacro %}

