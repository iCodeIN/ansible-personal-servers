{% macro local_logging() %}
logging:
  driver: local
  options:
    max-size: 10m
{% endmacro %}

{% macro json_logging() %}
logging:
  driver: json-file
  options:
    max-size: 10m
    max-file: "3"
{% endmacro %}

{% macro local_syslog_logging() %}
logging:
  driver: syslog
  options:
    syslog-facility: daemon
    syslog-format: rfc3164
    syslog-address: unixgram:///dev/log
{% raw %}
    tag: "{{.Name}}/{{.ID}}"
{% endraw %}
{% endmacro %}


{% macro journald_logging() %}
logging:
  driver: journald
  options:
{% raw %}
    tag: "{{.Name}}/{{.ID}}"
{% endraw %}
{% endmacro %}
